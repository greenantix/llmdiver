{
  "daemon": {
    "enabled": true,
    "port": 8080,
    "host": "localhost",
    "log_level": "INFO",
    "watch_debounce": 5,
    "max_concurrent_analyses": 3
  },
  "repositories": [
    {
      "name": "GMAILspambot",
      "path": "/home/greenantix/AI/GMAILspambot",
      "auto_commit": true,
      "auto_push": false,
      "analysis_triggers": ["*.py", "*.js", "*.sh"],
      "commit_threshold": 10
    },
    {
      "name": "LLMdiver",
      "path": "/home/greenantix/AI/LLMdiver",
      "auto_commit": true,
      "auto_push": false,
      "analysis_triggers": ["*.py", "*.js", "*.sh"],
      "commit_threshold": 5
    }
  ],
  "git_automation": {
    "enabled": true,
    "commit_message_template": "ðŸ¤– LLMdiver: {summary}\n\n{details}",
    "auto_push": false,
    "documentation_update": true,
    "branch_protection": ["main", "master"]
  },
  "llm_integration": {
    "model": "meta-llama-3.1-8b-instruct",
    "url": "http://127.0.0.1:1234/v1/chat/completions",
    "temperature": 0.1,
    "max_tokens": 4096,
    "context_window": 131072,
    "enable_chunking": true,
    "chunk_size": 24000
  },
  "repomix": {
    "style": "markdown",
    "compress": true,
    "remove_comments": true,
    "remove_empty_lines": true,
    "include_patterns": ["*.py", "*.js", "*.ts", "*.jsx", "*.tsx", "*.sh"],
    "ignore_patterns": ["*.md", "*.log", "*.tmp", "node_modules", "__pycache__", ".git", ".llmdiver"],
    "use_gitignore": true,
    "token_encoding": "cl100k_base"
  },
  "manifest_analysis": {
    "enabled": true,
    "manifest_files": [
      "package.json",
      "requirements.txt",
      "Cargo.toml",
      "pyproject.toml",
      "composer.json",
      "go.mod"
    ],
    "track_dependencies": true,
    "check_security_vulnerabilities": true,
    "analyze_dependency_changes": true
  },
  "multi_project": {
    "enabled": true,
    "projects_root": "/home/greenantix/AI",
    "auto_discover": true,
    "discovery_patterns": [".git", "package.json", "requirements.txt"],
    "exclude_paths": ["node_modules", "__pycache__", ".venv", "venv", "target"]
  }
}